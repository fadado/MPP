#!/bin/sh

# mpp -- Markdown preprocessor

# Constants
readonly PROJECT='MPP'
readonly DATADIR="/usr/local/share"
readonly PRELUDE="$DATADIR/$PROJECT/prelude.mpp"

# Command line
while getopts h opt; do
    case $opt in
        h)  echo 'NOT IMPLEMENTED!'
            exit 1
            ;;
    esac
done

# Must be "exec" to recycle the PID!
exec gpp \
    -U '${\W' '\W}' '\B' '\B' '\W}' '{' '}' '$' '' \
    +sccc '#|' '|#' '' \
    +sccc '&\n' '' '' \
    -x \
    -m \
    --nostdinc \
    -DHOME="$HOME" \
    -DNL="\n" \
    -DPID="$$" \
    -DUID="$UID" \
    -I "$DATADIR/$PROJECT" \
    --include "$PRELUDE" \
    "$@"

# vim:ts=4:sw=4:ai:et:fileencoding=utf-8:syntax=sh
