#!/bin/bash

# mpp - Markdown macro processor

########################################################################
# Bash options
########################################################################

# Safety
set -o errexit -o pipefail -o nounset -o noclobber

# Bash extensions
set +o posix
shopt -s lastpipe

########################################################################
#
########################################################################

declare -r lib="share/MPP.mpp"

function MPP
{
    local -r -a user=( -U '<%' '\W>' '\B' '\B' '\W>' '<' '>' '$' '' )
    local -r -a meta=( -M '<%' '\W>' '\B' '\B' '\W>' '<' '>' )

    local -r -a skips=(
        +sccc '&\n' '' ''           # continuation line (& and \n removed)
        +sccc '<#' '#>' ''          # multiline comment
        +siqi "'" "'" '\'           # literal string; like sh single quotes
        +siQi '"' '"' '\'           # interpolated string; like sh double quotes
        +ssss '<!--' '-->' ''       # preserved XML comments
        +ssss '`'  '`' ''           # MarkDown code regions
        +ssss '\n```' '\n```' ''
        +ssss '\n~~~' '\n~~~' ''
    )

    gpp --nostdinc          \
        --warninglevel 2    \
        "${user[@]}"        \
        "${meta[@]}"        \
        "${skips[@]}"       \
        --include "$lib"    \
        -I ./share          \
        "$@"
}

MPP "$@"

exit 0

# vim:ts=4:sw=4:ai:et:fileencoding=utf-8:syntax=sh
