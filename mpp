#!/bin/sh

# mpp - Markdown macro processor

readonly LIB="share/MPP.mpp"
readonly INC="./share"

MPP ()
{
    gpp --warninglevel 2                                \
        -U '<%' '\W>' '\B' '\B' '\W>' '<' '>' '$' ''    \
        +siic '<#' '#>' ''                              \
        +sccc '&\n' '' ''                               \
        +siqi "'" "'" '\'                               \
        +siQi '"' '"' '\'                               \
        +siis '<!--' '-->' ''                           \
        +siis '`'  '`' ''                               \
        +siis '\n```' '\n```' ''                        \
        +siis '\n~~~' '\n~~~' ''                        \
        --nostdinc                                      \
        -I "$INC"                                       \
        --include "$LIB"                                \
        "$@"
}

MPP "$@"

exit 0

# vim:ts=4:sw=4:ai:et:fileencoding=utf-8:syntax=sh
